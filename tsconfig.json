{
  "compilerOptions": {
    "outDir": "lib",
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "noImplicitThis": false,
    "noUnusedLocals": true,
    "removeComments": true,
    "declaration": true,
    "sourceMap": true,
    "jsx": "react",
    "esModuleInterop": true,
    "typeRoots": ["index.d.ts", "node_modules/@types"]
  },
  "include": ["components/**/*.tsx", "theme/**/*.tsx", "index.tsx"],
  "exclude": ["node_modules"]
}
